@model ZeroHunger.Models.DTO.EmployeeDto

<div class="container mt-5">
    <h2>Edit Profile</h2>
    <form asp-action="EditProfile" method="post">
        <div class="form-group">
            <label asp-for="empUserName" class="control-label">Username</label>
            <input asp-for="empUserName" class="form-control" />
            <span asp-validation-for="empUserName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="empPassword" class="control-label">Password</label>
            <input asp-for="empPassword" class="form-control" />
            <span asp-validation-for="empPassword" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="empName" class="control-label">Name</label>
            <input asp-for="empName" class="form-control" />
            <span asp-validation-for="empName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="email" class="control-label">Email</label>
            <input asp-for="email" class="form-control" />
            <span asp-validation-for="email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="empPhone" class="control-label">Phone</label>
            <input asp-for="empPhone" class="form-control" />
            <span asp-validation-for="empPhone" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="empAddress" class="control-label">Address</label>
            <input asp-for="empAddress" class="form-control"/>
            <span asp-validation-for="empAddress" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Update</button>
    </form>
</div>